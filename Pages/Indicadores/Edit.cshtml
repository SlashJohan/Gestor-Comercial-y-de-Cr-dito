@page "{id:int}"
@model GestorComercialCredito.Web.Pages.Indicadores.EditModel
@{
    ViewData["Title"] = "Editar Indicador";
}

<div class="container mt-4">
    <h2>Editar Indicador</h2>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Indicador.IndicadorId" />

                <div class="mb-3">
                    <label asp-for="Indicador.Nombre" class="form-label"></label>
                    <input asp-for="Indicador.Nombre" class="form-control" />
                    <span asp-validation-for="Indicador.Nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Indicador.Descripcion" class="form-label"></label>
                    <textarea asp-for="Indicador.Descripcion" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Indicador.Descripcion" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="Indicador.Activo" class="form-check-input" type="checkbox" />
                    <label asp-for="Indicador.Activo" class="form-check-label"></label>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
