@page
@model GestorComercialCredito.Web.Pages.Companies.IndexModel
@using GestorComercialCredito.Web.Models
@using System.Linq

@{
    ViewData["Title"] = "Empresas";
    var empresas = Model?.Empresas ?? Enumerable.Empty<Empresa>();
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Gestión de Empresas</h2>
        <a asp-page="Create" class="btn btn-primary">Nueva Empresa</a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error:</strong> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["WarningMessage"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>Advertencia:</strong> @TempData["WarningMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (empresas.Any())
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>NIT</th>
                    <th>Nombre</th>
                    <th>Activa</th>
                    <th>Fecha Creación</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var empresa in empresas)
                {
                    <tr>
                        <td>@empresa.EmpresaId</td>
                        <td>@empresa.Nit</td>
                        <td>@empresa.Nombre</td>
                        <td>
                            @if (empresa.Activa)
                            {
                                <span class="badge bg-success">Activa</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactiva</span>
                            }
                        </td>
                        <td>@empresa.FechaCreacion.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a asp-page="Edit" asp-route-id="@empresa.EmpresaId" class="btn btn-sm btn-outline-primary">Editar</a>
                            @if (empresa.Activa)
                            {
                                <form method="post" asp-page-handler="Inactivar" style="display: inline;">
                                    <input type="hidden" name="id" value="@empresa.EmpresaId" />
                                    <button type="submit" class="btn btn-sm btn-outline-warning" onclick="return confirm('¿Está seguro de inactivar esta empresa?');">Inactivar</button>
                                </form>
                            }
                            else
                            {
                                <form method="post" asp-page-handler="Activar" style="display: inline;">
                                    <input type="hidden" name="id" value="@empresa.EmpresaId" />
                                    <button type="submit" class="btn btn-sm btn-outline-success">Activar</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">
            No hay empresas registradas. <a asp-page="Create">Crear una nueva empresa</a>
        </div>
    }
</div>
