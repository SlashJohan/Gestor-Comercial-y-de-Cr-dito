@page "{id:int}"
@model GestorComercialCredito.Web.Pages.Companies.EditModel
@{
    ViewData["Title"] = "Editar Empresa";
}

<div class="container mt-4">
    <h2>Editar Empresa</h2>
    <hr />

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error:</strong> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <input type="hidden" asp-for="Empresa.EmpresaId" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                
                <div class="mb-3">
                    <label asp-for="Empresa.Nit" class="form-label">NIT *</label>
                    <input asp-for="Empresa.Nit" class="form-control" />
                    <span asp-validation-for="Empresa.Nit" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Empresa.Nombre" class="form-label">Nombre *</label>
                    <input asp-for="Empresa.Nombre" class="form-control" />
                    <span asp-validation-for="Empresa.Nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <div class="form-check">
                        <input asp-for="Empresa.Activa" class="form-check-input" type="checkbox" />
                        <label asp-for="Empresa.Activa" class="form-check-label">Activa</label>
                    </div>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
